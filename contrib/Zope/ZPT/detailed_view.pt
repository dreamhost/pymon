<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html>
<head>

    <meta tal:define="
          this_name      template/getId;
          content_string python:'%s, %s%s' % ('30', 'url=', here.absolute_url()+'/'+this_name);
    "
          http-equiv="refresh"
          tal:attributes="content content_string" 
    />
    <style type="text/css" media="all"> @import url(http://adytumsolutions.com:7080/adytum_extranet/site/plone.css?skin=);</style>

</head>
<body>
<div class="box">
    <table cellpadding="0" cellspacing="1" border="0" width="100%"><tr><td bgcolor="#000000">
    <table cellpadding="2" cellspacing="1" width="100%">
    <tr bgcolor="#ffffff">
      <td>Current State</td><td>Host</td><td>Service Type</td><td>Service</td><td>Previous State</td><td>Messsage</td>
      <td>Date Last Checked</td><td>Date Last OK</td><td>Date Last WARN</td><td>Date Last ERROR</td>
    </tr>
    <tal:block tal:repeat="state here/pymon_states">
      <tal:block tal:define="
        host          python:state[1];
        service_type  python:state[2];
        service       python:state[3];
        hex           python:state[5];
        current_state python:state[6];
        last_state    python:state[7];
        messg         python:state[8];
        last_checked  python:state[9];
        last_ok       python:state[10];
        last_warn     python:state[11];
        last_err      python:state[12];
      ">
        <tr tal:attributes="bgcolor hex">
        <td tal:content="current_state"/>
        <td tal:content="host"/>
        <td tal:content="service_type"/>
        <td tal:content="service"/>
        <td tal:content="last_state"/>
        <td tal:content="messg"/>
        <td tal:content="last_checked"/>
        <td tal:content="last_ok"/>
        <td tal:content="last_warn"/>
        <td tal:content="last_err"/>
        </tr>
      </tal:block>
    </tal:block>
    </table>
    </table>
  </div>
  </body>
</html>

